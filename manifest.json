{
    "name": "Article Summarizer",
    "version": "0.1",
    "description": "Summarizes web pages using the Text Rank algorithm.",
    "browser_action": {
        "name": "Toggle Summary"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "build/main.bundle.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "build/background.bundle.js"
        ]
    },
    "permissions": [
        "contextMenus"
    ],
    "commands": {
        "toggle-page-summary": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Toggle Page Summary"
        }
    },
    "manifest_version": 2
}