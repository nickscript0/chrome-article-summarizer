{
    "name": "Article Summarizer",
    "version": "0.1",
    "description": "Summarizes web pages using the Text Rank algorithm.",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "build/main.bundle.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "build/background.bundle.js"
        ]
    },
    "permissions": [
        "tabs",
        "tabHide",
        "contextMenus" // Can be removed probably
    ],
    "commands": {
        "toggle-page-summary": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Toggle Page Summary"
        },
        "trigger-kill-sticky": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "mac": "Command+Shift+K"
            },
            "description": "Kill Sticky Headers"
        }
    },
    // "content_security_policy": "default-src 'self'; script-src 'self'; object-src 'self'",
    // "content_security_policy": "script-src 'self'; object-src 'self'",
    // "content_security_policy": "script-src 'nonce-2726c7f26c'",
    // "browser_specific_settings": {
    //     "gecko": {
    //         "id": "chrome-article-summarizer@nickscript0"
    //     }
    // },
    "applications": {
        "gecko": {
            "id": "chrome-article-summarizer@nickscript0"
        }
    },
    "manifest_version": 2
}