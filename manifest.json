{
    "name": "Article Summarizer",
    "version": "0.1",
    "description": "Summarizes web pages using the Text Rank algorithm.",
    "browser_action": {
        "default_popup": "res/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dist/main.bundle.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "dist/background.bundle.js"
        ]
    },
    "permissions": [
        "tabs",
        "tabHide"
    ],
    "commands": {
        "toggle-page-summary": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Toggle Page Summary"
        },
        "trigger-kill-sticky": {
            "suggested_key": {
                "default": "Ctrl+Shift+K",
                "mac": "Command+Shift+K"
            },
            "description": "Kill Sticky Headers"
        }
    },
    "applications": {
        "gecko": {
            "id": "chrome-article-summarizer@nickscript0"
        }
    },
    "manifest_version": 2
}